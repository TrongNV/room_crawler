<div class="row">
  <div class="col-md-12">
    <h2 class="text-center"><%= t ".room_list"%></h2>
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th><%= t ".id" %></th>
          <th><%= t ".name_site" %></th>
          <th><%= t ".code" %></th>
          <th><%= t ".city" %></th>
          <th><%= t ".address" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @rooms %>
      </tbody>
    </table>
    <div class ="text-center"><%= paginate @rooms %></div>
    <div class ="text-center"><%= page_entries_info @rooms %></div>
  </div>
</div>
